<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:text="Speex Preprocessor  Other functions \nНастраивать\n"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/SpeexPprocIsUseVadCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text=" use   voice   sound activity detection "/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text=" в   voice   sound activity detection  Time ，  Never   voice sound  Active  voice sound  Activity judgement percentage ratio rate ，概 rate More  Big is More difficult to judge for  Have  voice sound live， The value range is [0,100]："
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical" />

            <EditText
                android:id="@+id/SpeexPprocVadProbStartEdit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text=" в   voice   sound activity detection  Time ，从 Have  voice sound  live to nothing  voice sound  Activity judgement percentage ratio rate ，概 rate More大More容易判断 for 无  voice sound live动， The value range is [0,100]："
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical" />

            <EditText
                android:id="@+id/SpeexPprocVadProbContEdit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="number" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/SpeexPprocIsUseAgcCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" use 自动增益控制" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="自动增益控制 Time ，增益的目标等级，目标等级More大增益More大， The value range is [1,2147483647]：" />

            <EditText
                android:id="@+id/SpeexPprocAgcLevelEdit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text=" в 自动增益控制 Time ，每秒最大增益的分贝值，分贝值More大增益More大， The value range is [0,2147483647]：" />

            <EditText
                android:id="@+id/SpeexPprocAgcIncrementEdit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text=" в 自动增益控制 Time ，每秒最大减益的分贝值，分贝值More小减益More大， The value range is [-2147483648,0]：" />

            <EditText
                android:id="@+id/SpeexPprocAgcDecrementEdit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text=" в 自动增益控制 Time ，最大增益的分贝值，分贝值More大增益More大， The value range is [0,2147483647]：" />

            <EditText
                android:id="@+id/SpeexPprocAgcMaxGainEdit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="number" />

        </LinearLayout>

        <Button
            android:text=" determine "
            android:onClick="OnClickSpeexPprocOtherSettingOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>