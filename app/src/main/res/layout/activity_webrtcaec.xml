<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:text="WebRtc Acoustic echo sound Eliminator \nНастраивать\n"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="Elimination mode，Elimination modeMorehigh Eliminate More Strong ， The value range is [0,2]："
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical" />

            <EditText
                android:id="@+id/WebRtcAecEchoModeEdit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text=" Return to sound delay ， unit  millisecond， The value range is [-2147483648,2147483647]， for 0 Represents adaptive Настраивать："
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical" />

            <EditText
                android:id="@+id/WebRtcAecDelayEdit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="number|numberSigned" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/WebRtcAecIsUseDelayAgnosticModeCheckBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text=" use 回sound延迟不可知模式" />

        <CheckBox
            android:id="@+id/WebRtcAecIsUseExtdFilterModeCheckBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text=" use 扩展滤波器模式" />

        <CheckBox
            android:id="@+id/WebRtcAecIsUseRefinedFilterAdaptAecModeCheckBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text=" use  Refined filter adaptive Aec模式" />

        <CheckBox
            android:id="@+id/WebRtcAecIsUseAdaptAdjDelayCheckBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text=" use  Adaptive adjustment  Return to sound delay " />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/WebRtcAecIsSaveMemFileCheckBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text=" will WebRtc Floating point version  Acoustic echo sound Eliminator Memory block  Save  To the extension directory WebRtcAecMem File ， In order to shorten the next initialization  Time  Convergence Time "/>

            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=" Delete memory block file "
                android:onClick="OnClickWebRtcAecDelMemFile" />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=" determine "
            android:onClick="OnClickWebRtcAecSettingOk" />

    </LinearLayout>

</ScrollView>